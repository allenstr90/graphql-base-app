type User{
    id: ID
    username: String
    email: Email
    firstName: String
    lastName: String
    activated: Boolean
}

extend type Mutation{
    # registre new user
    addUser(user: UserInput): User
    editUser(user: UserInput): User
}

input UserInput{
    id: ID
    username: String
    password: String
    email: Email
    activated: Boolean
    firstName: String
    lastName: String
    roles: [String]
}

extend type Query{
    #get all users
    list: [User]
    #get single user by username
    getUser(username: String!): User
}